---
interface Props {
    shortName: string;
    alt?: string;
}
const { shortName, alt } = Astro.props as Props;
---

<picture>
    <source
        srcset=`/sunnyside-agency-landing-page/images/desktop/image-${shortName}.jpg`
        media="(min-width: 1440px)"
    />
    <img
        src=`/sunnyside-agency-landing-page/images/mobile/image-${shortName}.jpg`
        alt=`${alt ?? shortName}`
    />
</picture>

<style>
    picture {
        width: 100%;
    }

    picture > * {
        width: 100%;
    }
</style>
